<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scanner viewfinder will be behind this overlay -->

    <!-- Top bar with controls -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_toggle_orientation"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="16dp"
        android:backgroundTint="@color/material_dynamic_primary90"
        android:contentDescription="@string/toggle_orientation"
        app:icon="@drawable/ic_screen_rotation" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_toggle_torch"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="16dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/material_dynamic_primary90"
        android:contentDescription="@string/toggle_torch"
        app:icon="@drawable/ic_flashlight_on" />

    <!-- Optionally, add more overlay UI here (e.g., prompt text, custom viewfinder) -->

</FrameLayout>
