<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:importantForAccessibility="yes"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:contentDescription="@string/main_screen_content"
        app:layout_constraintBottom_toTopOf="@+id/adContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_title"
                android:textAlignment="center"
                style="@style/TitleTextStyle"
                android:accessibilityHeading="true"
                android:contentDescription="@string/main_title_description"
                android:layout_marginBottom="24dp" />

            <!-- Stats Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/stats_card_description">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTotalGames"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/total_games"
                        style="@style/BodyTextStyle"
                        android:contentDescription="@string/total_games_description"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvLoanedGames"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/loaned_count"
                        style="@style/BodyTextStyle"
                        android:contentDescription="@string/loaned_games_description"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvAvailableGames"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/available_count"
                        style="@style/BodyTextStyle"
                        android:contentDescription="@string/available_games_description"
                        android:textAlignment="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Main Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddGame"
                    style="@style/ButtonStyle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:contentDescription="@string/add_game_description"
                    android:text="@string/add_game" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBulkUpload"
                    style="@style/ButtonStyle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:contentDescription="@string/bulk_upload_description"
                    android:text="@string/bulk_upload" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnListGames"
                    style="@style/ButtonStyle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:contentDescription="@string/list_games_description"
                    android:text="@string/list_games" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLoanGame"
                    style="@style/ButtonStyle.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:contentDescription="@string/loan_game_description"
                    android:text="@string/loan_game" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReturnGame"
                    style="@style/ButtonStyle.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:contentDescription="@string/return_game_description"
                    android:text="@string/return_game" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteGame"
                    style="@style/ButtonStyle.Danger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:contentDescription="@string/delete_game_description"
                    android:text="@string/delete_game" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportImportGames"
                    style="@style/ButtonStyle.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:contentDescription="@string/export_import_games_description"
                    android:text="@string/export_import_games" />

                <!-- Settings button at the bottom -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    style="@style/ButtonStyle.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/settings_description"
                    android:text="@string/settings" />

                <!-- Version info text at the bottom -->
                <TextView
                    android:id="@+id/tvVersionInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:contentDescription="@string/version_info_description"
                    tools:text="Board Game Inventory v1.0 (1)" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Ad container at the bottom of the screen -->
    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ad_container_description"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- AdView will be added here programmatically -->
        <include layout="@layout/layout_ad_banner" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
