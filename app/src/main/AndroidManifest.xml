<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Storage permissions using scoped storage approach -->
    <!-- Legacy permissions for Android 9 and below -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    
    <!-- Modern granular permissions for Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:name=".BoardGameInventoryApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.BoardgameInventory"
        tools:targetApi="34">

        <!-- AdMob App ID placeholder - real value will be set programmatically -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3259150145941701~7087301806" />

        <!-- Custom CaptureActivity for ZXing barcode scanning -->
        <activity
            android:name=".ui.CustomCaptureActivity"
            android:screenOrientation="unspecified"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BoardgameInventory">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.AddGameActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".ui.GameListActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".ui.GameDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.GameListActivity" />
            
        <activity
            android:name=".ui.EditGameActivity"
            android:exported="false"
            android:parentActivityName=".ui.GameDetailActivity" />
            
        <activity
            android:name=".ui.BulkUploadActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".ui.LoanGameActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".ui.ReturnGameActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".ui.ExportImportActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".ui.DeleteGameActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.DatabaseManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Settings Activity with Privacy Policy -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:label="Settings" />

        <!-- Privacy Policy Activity -->
        <activity
            android:name=".ui.PrivacyPolicyActivity"
            android:exported="false"
            android:parentActivityName=".ui.SettingsActivity"
            android:label="Privacy Policy" />

        <!-- Developer Settings Activity (for development use) -->
        <activity
            android:name=".ui.DeveloperSettingsActivity"
            android:exported="false"
            android:enabled="true"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.BoardgameInventory"
            android:parentActivityName=".MainActivity"
            android:label="Developer Settings" />

        <!-- Accessibility Checker Activity -->
        <activity
            android:name=".ui.accessibility.AccessibilityCheckerActivity"
            android:exported="false"
            android:parentActivityName=".ui.DeveloperSettingsActivity"
            android:label="@string/accessibility_checker_title" />

        <!-- Database maintenance service -->
        <service
            android:name=".service.DatabaseMaintenanceService"
            android:exported="false"
            android:enabled="true" />

    </application>

</manifest>
